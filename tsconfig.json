{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.iterable", "ES2020"],
    "resolveJsonModule": false, // ESM doesn't yet support JSON modules.
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
